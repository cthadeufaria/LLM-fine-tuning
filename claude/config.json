{
  "model_config": {
    "model_name": "neuralmind/bert-base-portuguese-cased",
    "model_type": "encoder-decoder",
    "use_peft": true,
    "max_length": 512,
    "special_tokens": [
      "[LEGAL_Q]", "[LEGAL_A]", "[IMMIGRATION]", "[PORTUGAL]", 
      "[VISA]", "[RESIDENCY]", "[CITIZENSHIP]", "[DOCUMENT]"
    ]
  },
  "lora_config": {
    "task_type": "SEQ_2_SEQ_LM",
    "r": 16,
    "alpha": 32,
    "dropout": 0.1,
    "target_modules": ["query", "value", "key", "dense"]
  },
  "training_config": {
    "num_train_epochs": 3,
    "learning_rate": 5e-5,
    "per_device_train_batch_size": 4,
    "gradient_accumulation_steps": 4,
    "warmup_steps": 100,
    "logging_steps": 10,
    "save_steps": 500,
    "eval_steps": 500,
    "max_steps": -1,
    "fp16": true,
    "gradient_checkpointing": true,
    "dataloader_drop_last": true,
    "load_best_model_at_end": false,
    "remove_unused_columns": false,
    "predict_with_generate": true
  },
  "data_config": {
    "data_format": "legal_qa",
    "input_template": "[LEGAL_Q] {question} [IMMIGRATION] {context}",
    "output_template": "[LEGAL_A] {answer}",
    "no_context_template": "[LEGAL_Q] {question}"
  },
  "legal_domain_config": {
    "focus_area": "Portuguese Immigration Law",
    "language": "Portuguese",
    "specializations": [
      "work_visas",
      "residency_permits", 
      "family_reunification",
      "citizenship_naturalization",
      "student_visas",
      "retirement_visas"
    ]
  }
}
